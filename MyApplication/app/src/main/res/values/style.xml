<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme." parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- app branding color for the app bar-->
        <item name="colorPrimary">#0288D1</item>
        <!-- darker varian for the status bar nad contextual app bar -->
        <item name="colorPrimaryDark">#FFEB38</item>
        <!-- theme UI controls like checkbox and text fields -->
        <item name="colorAccent">#000000</item>
